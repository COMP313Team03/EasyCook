<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackgroung"
    android:orientation="vertical" >

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/ingredientNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredient Name:" />

    <EditText
        android:id="@+id/ingredientNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ingredientTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Ingredient Type:" />

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image:" />

    <Button
        android:id="@+id/ingredientImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Image" />

    <Button
        android:id="@+id/ingredientSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Ingredient" />

    </LinearLayout>
</LinearLayout>